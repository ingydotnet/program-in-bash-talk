== for Loops

# perl:
my @array = qw<foo bar baz>;
for (my $i = 0; $i < @array; $i++) {
  my $name = $array[$i];
  say "Hello ${\ ucfirst $name}";
}

# bash:
array=(foo bar baz)
i=0
while [[ $i -lt ${#array[*]} ]]; do
  name=${array[$((i++))]}
  echo "Hello ${name^}"
done

# perl:
my @array = qw<foo bar baz>;
for my $name (@array) {
  say "Hello ${\ ucfirst $name}";
}

# bash:
array=(foo bar baz)
for name in ${array[@]}; do
  echo "Hello ${name^}"
done

