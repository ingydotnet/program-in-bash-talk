== Running code in various languages

$ for i in {1..10}; do echo "bash 1-line> $i"; done

$ for i in {1..10}; do
>   echo "bash multi> $i"
> done

# bash:
for i in {1..10}; do
  echo "bash> $i"
done

# perl:
for my $i (1..10) {
  say "perl> $i";
}

# python:
for i in range(1, 10):
  print("python> %d" % i)

# ruby:
(1..10).each do |i|
  puts "ruby> #{i}"
end

# node:
for (i = j = 1; j <= 10; i = ++j) {
  console.log(`node> ${i}`);
}

# coffee:
for i in [1..10]
  console.log "coffee> #{i}"
