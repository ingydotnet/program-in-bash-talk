----
== Arrays -- shift

# perl:
my @array = (1..10);
shift @array;
say "@array";

# bash:
Array::shift() {
  n=$1
  name="$1[@]"
  set -- "${!name}"
  shift
  IFS=' ' read -r -a $n <<<"$@"
}
array=({1..10})
Array::shift array
echo "${array[*]}"

